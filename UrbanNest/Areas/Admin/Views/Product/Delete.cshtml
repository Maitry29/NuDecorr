@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-body border pt-3 mt-4 text-center">
        
        <div class="row justify-content-center pb-2">
            <h2 class="text-dark">Delete Product</h2>
        </div>
    </div>

    <div class="card-body p-4">
        <form form asp-action="Delete" method="post" class="row">
            <div class="border p-3">
                <input asp-for="ID" hidden />
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                </div>

                @* <div class="mb-3"> *@
                @*     <label asp-for="CategoryId" class="form-label"></label> *@
                @*     <input asp-for="CategoryId" disabled class="form-control border-0 shadow" /> *@
                @* </div> *@

                <div class="mb-3">
                    <label asp-for="ImageURL" class="form-label"></label>
                    <input asp-for="ImageURL" disabled class="form-control border-0 shadow" />
                </div>


                <div class="row pt-2 justify-content-center">
                    <div class="col-6 col-md-3 mb-2">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-dark w-100">
                            Back to List
                        </a>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
