@model ShoppingCartVM

<form method="post">
    <br />
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-dark text-light py-4">
            <div class="row align-items-center px-4">
                <div class="col-6">
                    <h4 class="text-white fw-bold">Shopping Cart</h4>
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left"></i>Continue Shoppingt
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body my-4">
            <div class="card-body my-4">
                <div class="col-md-10 offset-md-1">

                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3 align-items-center">
                            <div class="col-lg-2 text-center">
                                <img src="@item.Product.ImageURL" class="rounded img-fluid shadow-sm" style="max-height: 100px;" />
                            </div>

                            <div class="col-lg-5">
                                <h5 class="text-uppercase text-secondary fw-bold">@item.Product.Title</h5>
                                <p class="text-muted"><small>@Html.Raw(item.Product.Description)</small></p>
                            </div>

                            <div class="col-lg-5 text-center row align-items-center">
                                <div class="col-md-3 pt-md-2">
                                    <h6 class="fw-semibold text-dark">
                                        @item.Product.Price.ToString("c")
                                        <span class="text-muted">x</span> @item.Count
                                    </h6>
                                </div>
                                <div class="col-md-5">
                                    <div class="btn-group" role="group">
                                        <a asp-action="plus" asp-route-cartId="@item.Id"
                                           class="btn btn-dark shadow-sm px-3">
                                            <i class="bi bi-plus-circle"></i>
                                        </a>
                                        <a asp-action="minus" asp-route-cartId="@item.Id"
                                           class="btn btn-dark shadow-sm px-3">
                                            <i class="bi bi-dash-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <a asp-action="remove" asp-route-cartId="@item.Id"
                                       class="btn btn-danger bg-gradient px-3 shadow-sm">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0">
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <ul class="list-group mb-4">
                        <li class="d-flex justify-content-between align-items-center px-3 py-2 ">
                            <h5 class="text-dark fw-semibold text-uppercase">Total</h5>
                            <h4 class="text-dark fw-bold">@Model.OrderTotal.ToString("c")</h4>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <a asp-action="Summary"
                       class="btn btn-dark border-0 bg-gradient w-100 py-3 shadow-lg fw-bold">
                        Proceed to Checkout
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
