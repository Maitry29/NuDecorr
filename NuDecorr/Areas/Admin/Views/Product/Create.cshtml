@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header border pt-3 mt-4 text-center">
        <div class="row justify-content-center pb-2">
            <h2 class="text-dark">Create Product</h2>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-controller="Product" asp-action="Create" method="post" class="row container-fluid">
            @Html.AntiForgeryToken()
            <div class="border p-3 col-12">
                <div class="mb-3 row">
                    <label asp-for="Title" class="ms-2"></label>
                    <div class="col-12">
                        <input asp-for="Title" class="form-control border-0 shadow" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Description" class="ms-2"></label>
                    <div class="col-12">
                        <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Price" class="ms-2"></label>
                    <div class="col-12">
                        <input asp-for="Price" class="form-control border-0 shadow" type="number" step="0.01" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ImageURL" class="ms-2"></label>
                    <div class="col-12">
                        <input asp-for="ImageURL" class="form-control border-0 shadow" type="url" />
                    </div>
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                
                @* <div class="form-floating py-2  mb-3 row"> *@
                @*     <select asp-for="CategoryID" asp-items="@(ViewBag.CatagoryList as IEnumerable<SelectListItem>)" *@
                @*             class="form-select border-0 shadow"> *@
                @*         <option disabled selected value="">--Select category--</option> *@
                @*     </select> *@
                @*     <label asp-for="CategoryID" class="ms-2"></label> *@
                @*     <span asp-validation-for="CategoryID" class="text-danger"></span> *@


                @* </div> *@

                <div class="row pt-2 d-flex justify-content-center justify-content-md-start">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control w-100">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}