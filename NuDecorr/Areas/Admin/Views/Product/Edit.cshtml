@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-body border pt-3 mt-4 text-center">
        <input asp-for="ProductID" hidden />
        <div class="row justify-content-center pb-2">
            <h2 class="text-dark">Edit Product</h2>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row container-fluid">

            <div class="border p-3">
                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control border-0 shadow" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control border-0 shadow" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="ImageURL" class="form-label"></label>
                        <input asp-for="ImageURL" class="form-control border-0 shadow" type="url" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                </div>


                <div class="row pt-2 justify-content-center">
                    <div class="col-6 col-md-3 mb-2">
                        <button type="submit" class="btn btn-dark w-100">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark w-100">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

